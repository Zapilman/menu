{
  "include": ["src/**/*", "custom.d.ts"],
  "exclude": ["./dist/", "node_modules", "i18n"],
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "_components/*": ["./src/components/*"],
      "_modules/*": ["./src/modules/*"],
      "_UI/*": ["./src/UI/*"],
      "_store/*": ["./src/store/*"],
      "_styles/*": ["./src/styles/*"],
      "_i18n/*": ["./i18n/*"]
      // "_hooks/*": ["./src/hooks/*"]
    }
  }
}
